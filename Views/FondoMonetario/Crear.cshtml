@model ControlGastos.FondosMonetario

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Agregar Nuevo Fondo Monetario</h2>

<form action="@Url.Action("Crear", "FondoMonetario")" method="post">
    <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" required>
    </div>

    <div class="mb-3">
        <label for="Tipo" class="form-label">Tipo de Fondo Monetario</label>
        <select class="form-control" id="Tipo" name="Tipo">
            @foreach (var tipo in ViewBag.TipoFondosMonetarios as List<ControlGastos.TipoFondosMonetario>)
            {
                <option value="@tipo.Id">@tipo.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="@Url.Action("Index", "FondoMonetario")" class="btn btn-secondary">Cancelar</a>
</form>