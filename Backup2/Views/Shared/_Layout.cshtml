<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <title>ControlGastos</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    @* Uncomment to use the HtmlEditor control *@
    @* <script src="https://cdn.jsdelivr.net/npm/devextreme-quill@24_1/dist/dx-quill.min.js"></script> *@
</head>

<body style="padding-top: 3.5rem;">

    <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">ControlGastos</a>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navbar" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <!-- Mantenimientos -->
                    <li class="nav-item dropdown">
                        <a role="button" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Mantenimientos</a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "TipoGasto")" class="dropdown-item">Tipos de Gasto</a></li>
                            <li><a href="@Url.Action("Index", "FondoMonetario")" class="dropdown-item">Fondo Monetario</a></li>
                        </ul>
                    </li>

                    <!-- Movimientos -->
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Movimientos</a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Presupuesto")" class="dropdown-item">Presupuesto por tipo de gasto</a></li>
                            <li><a href="@Url.Action("Crear", "Gasto")" class="dropdown-item">Registros de gastos</a></li>
                            <li><a href="@Url.Action("Index", "Deposito")" class="dropdown-item">Depositos</a></li>
                        </ul>
                    </li>

                    <!-- Consultas y Reportes -->
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Consultas y Reportes</a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Movimientos")" class="dropdown-item">Consulta de movimientos</a></li>
                            <li><a href="@Url.Action("Grafico", "Movimientos")" class="dropdown-item">Grafico Comparativo de Presupuesto y Ejecucion</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container" style="margin-top: 1.5rem;">
        @RenderBody()
    </main>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var dropdowns = document.querySelectorAll('.dropdown-toggle');
            dropdowns.forEach(function (dropdown) {
                new bootstrap.Dropdown(dropdown);
            });
        });
    </script>
</body>

</html>